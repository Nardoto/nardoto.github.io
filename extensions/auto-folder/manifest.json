{
  "manifest_version": 3,
  "name": "Abrir Múltiplas Abas + CapCut Automation",
  "version": "2.0",
  "description": "Extensão para abrir múltiplas abas e automatizar o CapCut AI Creator",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.capcut.com/ai-creator/start*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.capcut.com/ai-creator/start*"],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
