{
  "manifest_version": 3,
  "name": "Claude LoopLess 4.1",
  "version": "4.1",
  "description": "ðŸŽ¯ Organizador profissional de prompts exclusivo para Claude.ai - DistribuÃ­do por LoopLess",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "icons": {
    "16": "icons/iconLOGO.png",
    "48": "icons/iconLOGO.png",
    "128": "icons/iconLOGO.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "claude_handler.js",
        "content.js"
      ],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar-script.js",
        "icons/*"
      ],
      "matches": [
        "https://claude.ai/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}