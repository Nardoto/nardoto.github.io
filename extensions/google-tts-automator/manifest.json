{
  "manifest_version": 3,
  "name": "BlaBlaBot para Google AI Studio",
  "version": "2.1",
  "description": "Automatizador para Google AI Studio - Generate Speech, dividindo textos e facilitando o processo.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "downloads" 
  ],
  "host_permissions": [
    "https://aistudio.google.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar-script.js", "icons/*"],
      "matches": ["https://aistudio.google.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}