{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "5.5",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://suno.com/*"],
      "js": ["content-simplified.js", "help-modal.js", "interactive-tour.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils.js",
        "dom-manager.js", 
        "storage-manager.js",
        "lyrics-worker.js",
        "i18n.js",
        "styles.css",
        "_locales/pt_BR/messages.json",
        "_locales/en/messages.json",
        "_locales/es/messages.json",
        "_locales/fr/messages.json"
      ],
      "matches": ["https://suno.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "192": "icons/android-chrome-192x192.png"
  },
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://suno.com/*",
    "https://cdn1.suno.ai/*",
    "https://*.suno.ai/*"
  ]
}